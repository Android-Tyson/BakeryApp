<resources>

    <!--<style name="AppTheme" parent="Theme.AppCompat.NoActionBar">-->
    <style name="AppTheme" parent="MaterialNavigationDrawerTheme.Light.DarkActionBar">

    <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/myPrimaryColor</item>
        <item name="colorPrimaryDark">@color/myPrimaryDarkColor</item>
        <item name="colorAccent">@color/myAccentColor</item>
        <item name="android:icon">@color/myAccentColor</item>
        <item name="android:textColorPrimary">@color/myTextPrimaryColor</item>
        <item name="android:textColorSecondary">@color/myTextColor2</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:windowBackground">@color/myWindowBackground</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="UGCakeTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/myPrimaryColor</item>
    <item name="colorPrimaryDark">@color/myPrimaryDarkColor</item>
    <item name="colorAccent">@color/myAccentColor</item>
    <item name="android:textColorPrimary">@color/myTextPrimaryColor</item>
    <item name="android:textColorSecondary">@color/myTextColor2</item>
        <item name="android:textColorHint">@color/myTextPrimaryColor</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    <item name="android:windowBackground">@color/myWindowBackground</item>
    </style>

    <style
        name="CustomToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/primary_material_light</item>
        <item name="android:textColorSecondary">@color/primary_material_light</item>
        <item name="android:textColor">@color/myTextPrimaryColor</item>
    </style>

    <style name="CustomEditTextTheme">
        <item name="colorControlNormal">@color/myDividerColor</item>
        <item name="android:textColor">@color/myTextColor2</item>
    </style>

</resources>
