<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.urbangirlbakeryandroidapp.alignstech" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- [START gcm_permission] -->
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- [END gcm_permission] -->
    <application
        android:name=".utils.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/app_id" />
        <meta-data
            android:name="AA_MODEL"
            android:value=".model.DataBase_UserInfo , .model.Cakes , .model.Gifts , .model.Offers , .model.Accessories" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="1" />

        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <provider
            android:name="com.facebook.FacebookContentProvider"
            android:authorities="com.facebook.app.FacebookContentProvider728615400528729"
            android:exported="true" />

        <activity
            android:name=".activity.EditProfile"
            android:label="@string/title_activity_edit_profile"
            android:parentActivityName=".activity.UserProfile"
            android:screenOrientation="portrait"
            android:theme="@style/UGCakeTheme" >
        </activity>
        <activity
            android:name=".activity.FillProfile"
            android:label="@string/title_activity_edit_profile"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/UGCakeTheme" >
        </activity>
        <activity
            android:name=".activity.SeeMoreCategories"
            android:label="@string/title_activity_see_all_categories"
            android:launchMode="singleTop"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/UGCakeTheme" >
        </activity>
        <activity
            android:name=".activity.SeeMoreGifts"
            android:label="@string/title_activity_see_all_gifts"
            android:launchMode="singleTop"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/UGCakeTheme" >
        </activity>
        <activity
            android:name=".activity.SingleItemCakeDetails"
            android:label="@string/title_activity_single_item_detils"
            android:launchMode="singleTop"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/UGCakeTheme" >
        </activity>
        <activity
            android:name=".activity.SingleItemGiftDetails"
            android:label="@string/title_activity_single_item_detils"
            android:launchMode="singleTop"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/UGCakeTheme" >
        </activity>
        <activity
            android:name=".activity.UserProfile"
            android:label="@string/title_activity_profile"
            android:launchMode="singleTop"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/UGCakeTheme" >
        </activity>
        <activity
            android:name=".activity.Settings"
            android:label="@string/title_activity_setting"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/UGCakeTheme" >
        </activity>
        <activity
            android:name=".activity.NoticeBoard"
            android:label="@string/title_activity_notice_board"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/UGCakeTheme" >
        </activity>
        <activity
            android:name=".activity.Ordered_Cake_Details"
            android:label="@string/title_activity_notice_board"
            android:parentActivityName=".activity.SingleItemCakeDetails"
            android:screenOrientation="portrait"
            android:theme="@style/UGCakeTheme" >
        </activity>
        <activity
            android:name=".activity.Ordered_Gift_Details"
            android:label="@string/title_activity_notice_board"
            android:parentActivityName=".activity.SingleItemGiftDetails"
            android:screenOrientation="portrait"
            android:theme="@style/UGCakeTheme" >
        </activity>
        <activity
            android:name=".activity.GridCake"
            android:label="@string/title_activity_grid_cake"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/UGCakeTheme">
        </activity>




        // GCM RECEIVER STUFFS
        <!-- [START gcm_receiver] -->
        <receiver
            android:name="com.google.android.gms.gcm.GcmReceiver"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="gcm.play.android.samples.com.gcmquickstart" />
            </intent-filter>
        </receiver>
        <!-- [END gcm_receiver] -->


        <!-- [START gcm_listener] -->
        <service
            android:name=".gcm.MyGcmListenerService"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
            </intent-filter>
        </service>
        <!-- [END gcm_listener] -->


        <!-- [START instanceId_listener] -->
        <service
            android:name=".gcm.MyInstanceIDListenerService"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.google.android.gms.iid.InstanceID" />
            </intent-filter>
        </service>
        <!-- [END instanceId_listener] -->

        <service
            android:name=".gcm.RegistrationIntentService"
            android:exported="false" >
        </service>

    </application>

</manifest>
